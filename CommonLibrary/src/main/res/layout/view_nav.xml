<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dip"
    android:id="@+id/nav_layout"
    android:background="@android:color/transparent">
    <ImageButton
        android:id="@+id/ib_nav_left"
        android:layout_centerVertical="true"
        android:paddingStart="16dip"
        android:paddingEnd="16dip"
        android:background="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/ib_nav_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent"
        android:paddingStart="16dip"
        android:paddingEnd="16dip"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_nav_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:paddingStart="16dip"
        android:paddingEnd="16dip"
        android:textColor="#333333"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="16sp"
        android:textColor="#333333"/>
    <LinearLayout
        android:id="@+id/layout_nav_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@id/ib_nav_right"
        android:orientation="horizontal">
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_nav_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    <View
        android:id="@+id/view_nav_line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#e5e5e5"></View>
</RelativeLayout>
